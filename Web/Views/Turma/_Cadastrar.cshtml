@model Turma;


<div class="cadastrar-container">
  <form id="cadastroTurma">
      <h1>Cadastre a Turma</h1>

      <label asp-for="Nome"><b>Nome</b></label>
      <input type="text" placeholder="Noma da Turma Ex: 2A" asp-for="Nome" required>
      

      <label asp-for="QuantidadeAlunos"><b>Quantidade de Alunos</b></label>
      <input type="text" placeholder="Quantidade de Alunos" asp-for="QuantidadeAlunos" required>

      <label asp-for="Sala"><b>Sala</b></label>
      <input type="text" placeholder="NÃºmero da Sala" asp-for="Sala" required>

      <label asp-for="Turno"><b>Turno</b></label>
      <input type="text" placeholder="Turno da Turma" asp-for="Turno" required>

      <button type="submit" class="registerbtn" onclick="turma.cadastrar()">Cadastrar</button>
  </form>
</div>

<script src="~/js/Pages/turma.js" asp-append-version="true"></script>
<script>
    turma.init({
        urls: {
            cadastrar: '@Url.Action("cadastrar", "turma")'
        }
    });
</script>