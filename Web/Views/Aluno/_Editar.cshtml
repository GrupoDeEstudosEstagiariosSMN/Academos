@model Aluno
@{
    Layout = null;
}

<h2>Editar Aluno</h2>

<form id="formEditarAluno" onsubmit="aluno.editar()">
    <input type="hidden" asp-for="Id">
    <label asp-for="Nome"></label>
    <input type="text" asp-for="Nome">
    <label asp-for="Turma"></label>
    <input type="text" asp-for="Turma">
    <input type="hidden" asp-for="Email">
    <label asp-for="Matricula"></label>
    <input type="text" asp-for="Matricula">

    <button type="submit" class="btn btn-danger">Editar Aluno</button>
</form>