@model IEnumerable<Curso>

@{
    Layout = null;
}

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargaHoraria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trilha)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CargaHoraria)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Professor)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Trilha)
                </td>

                <td>
                    <button type="button" class="btn btn-danger" onclick="curso.deletarCurso(@item.Id)">Deletar</button>
                    @* <button type="submit" class="registerbtn" onclick="curso.editarCurso(@item.Id)">Salvar</button> *@
                    <a class="btn btn-primary" asp-controller="curso" asp-action="editar" asp-route-id="@item.Id">Editar</a>

                </td>
            </tr>
        }
    </tbody>
</table>