@model IEnumerable<Curso>

@{
  Layout = null;
}

<table class="table table-striped table-hover">
  <thead>
    <tr class="success">
      <th>
        Nome
      </th>
      <th>
        Carga Horaria
      </th>
      <th>
        Professor
      </th>
      <th>
        Trilha
      </th>
    </tr>
  </thead>

  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @item.Nome
        </td>
        <td>
          @item.CargaHoraria
        </td>
        <td>
          @item.Professor
        </td>
        <td>
          @item.Trilha
        </td>
        <td>
          <button type="button" class="btn btn-danger" onclick="curso.deletarCurso(@item.Id)">Deletar</button>

          <form id="lucas_@item.Id">
            <input type="hidden" name="Id" value="@item.Id">
            <input type="hidden" name="Nome" value="@item.Nome">
            <input type="hidden" name="CargaHoraria" value="@item.CargaHoraria">
            <input type="hidden" name="Professor" value="@item.Professor">
            <input type="hidden" name="Trilha" value="@item.Trilha">
          </form>
          <button type="button" class="btn btn-primary" onclick="curso.editarCurso(@item.Id)">Editar</button>
        </td>
      </tr>
    }
  </tbody>
</table>
