@model IEnumerable<Curso>

@{
    Layout = null;
}

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargaHoraria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trilha)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CargaHoraria)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Professor)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Trilha)
                </td>

                <td>
                    <button type="button" class="btn btn-danger" onclick="curso.deletarCurso(@item.Id)">Deletar</button>
                    <button><a asp-action="Editar" asp-route-id="@item.Id">Editar</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/Pages/curso.js" asp-append-version="true"></script>
<script>
    curso.init({
        urls: {
            deletar: '@Url.Action("deletar", "curso")'
        }
    });
</script>