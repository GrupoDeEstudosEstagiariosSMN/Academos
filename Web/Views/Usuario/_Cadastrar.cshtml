@{
    Layout = null;
}

<div class="cadastrar-container">
  <form id="cadastroUsuario">
      <h1>Crie sua conta</h1>
      <hr>

      <label for="nome"><b>Nome</b></label>
      <input type="text" placeholder="Seu nome" name="nome" id="Nome" required>

      <label for="sobrenome"><b>Sobrenome</b></label>
      <input type="text" placeholder="Seu sobrenome" name="sobrenome" id="Sobrenome" required>

      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Seu Email" name="email" id="Email" required>

      <label for="senha"><b>Senha</b></label>
      <input type="password" placeholder="Escolha uma senha" name="senha" id="Senha" required>

      <label for="senha-repeat"><b>Repitir Senha</b></label>
      <input type="password" placeholder="Repita sua senha" name="senha-repeat" id="Senha-repeat" required>

      <hr>

      <button type="submit" class="registerbtn" onclick="cadastrar.cadastrarUsuario()">Registrar</button>
  </form>
    </div>
  <div class="container-entrar">
    <p>JÃ¡ tem uma conta? <a href="#">Sign in</a>.</p>
</div>

 <script src="~/js/Pages/_cadastrar.js" asp-append-version="true"></script>
 <script>
     sign.init({
      urls: { 
             cadastrarUsuario: '@Url.Action("cadastro", "cadastro")'
     }
  });
 </script> 
